structure {
    app_dir: grails-app
    controllers_dir: controllers
}

controller {
    <controller_name>Controller.groovy
}

action {
    def <action_name> (<A-Za-z0-9_,>) {
}

endpoint {
    controller_style: upper_camel_case
    endpoint_style: lower_camel_case
    endpoint: <controller_name>/<action_name>
}